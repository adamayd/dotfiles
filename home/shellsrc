# Aliases
alias ll='ls -lhA --group-directories-first --color=auto'
alias mutt='neomutt'
alias vi='vim'
alias tf='terraform'
alias psg="ps -aux | grep -v grep | grep "
alias passgen="echo && cat /dev/urandom | env LC_CTYPE=C tr -dc [:alnum:] | head -c 15 | base64 && echo"

# Enviroment Variables
export EDITOR='vim'

# SSH
if [ -e $HOME/.sshrc ]; then
    source $HOME/.sshrc
fi

# Node Version Manager (NVM)
export NVM_DIR="$HOME/.nvm"
[ -s "$NVM_DIR/nvm.sh" ] && \. "$NVM_DIR/nvm.sh"  # This loads nvm
[ -s "$NVM_DIR/bash_completion" ] && \. "$NVM_DIR/bash_completion"  # This loads nvm bash_completion

# Go Path
if [ -e $HOME/go ]; then
    export GOPATH="$HOME/go"
    export PATH=$PATH:$GOPATH
fi

## ASDF Version Manager
if [ -e $HOME/.asdfrc ]; then
    source $HOME/.asdfrc
fi

## Gradle
export PATH=$PATH:/opt/gradle-6.3/bin

## Ruby 
if [ -e $HOME/.rubyrc ]; then
    source $HOME/.rubyrc
fi

if [ -e /usr/local/lib/python3.10/site-packages/powerline/bindings/bash/powerline.sh ]; then
    . /usr/local/lib/python3.10/site-packages/powerline/bindings/bash/powerline.sh
fi

# Added by serverless binary installer
export PATH="$HOME/.serverless/bin:$PATH"

# tabtab source for packages
# uninstall by removing these lines
[ -f ~/.config/tabtab/__tabtab.bash ] && . ~/.config/tabtab/__tabtab.bash || true
